@model QuizH.ViewModels.Exam.ExamCreationViewModel
<div class="row">
    <div class="col-md-6">
        <form asp-controller="Exam" asp-action="Insert" method="post">
            <input class="form-control" asp-for="Id" type="hidden"/>
            <div class="form-group">
                <label asp-for="Title">
                    Title
                    <input class="form-control" asp-for="Title" />
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Instructions">
                    Instructions
                    <input class="form-control" asp-for="Instructions" />
                </label><br />
            </div>
            <div class="form-group">
                <label asp-for="Course">
                    Course
                    <select class="form-control" asp-for="Course" asp-items="@(new SelectList(Model.AvailableCourses))"></select>
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Questions">
                    Questions
                </label>
                <table>
                    <thead>
                        <tr><th>Id</th><th>Question</th></tr>
                    </thead>
                    <tbody data-bind="foreach: selectedQuestions">
                        <tr>
                            <td data-bind="text: id"></td>
                            <td data-bind="text: text">
                            </td>
                            <td>
                                <input type="hidden" data-bind="value: id, attr: { name: 'Questions['+$index()+']'}" />
                            </td>
                        </tr>
                    </tbody>
                </table>

            </div>
            <input type="submit" class="btn btn-default" />
        </form>
    </div>
    <div class="col-md-6">
        <table>
            <thead>
                <tr><th>Id</th><th>Question</th></tr>
            </thead>
            <tbody data-bind="foreach: availableQuestions">
                <tr>
                    <td data-bind="text: id"></td>
                    <td data-bind="text: text"></td>
                    <td><a href="#" data-bind="click: function(){$parent.selectQuestion($index);}">Select</a></td>
                </tr>
            </tbody>
        </table>

    </div>
</div>


@section Scripts {

    <script src="~/js/Exam.js" asp-append-version="true"></script>
    <script type="text/javascript">
        var preloadedQuestions= @Json.Serialize(Model.Questions); 

        //require(["../js/Exam"])
        $.getJSON("/Question/Get",function (data) {
            var vm = new ExamsViewModel(data,preloadedQuestions);
            ko.applyBindings(vm);
        }
);
    </script>
}