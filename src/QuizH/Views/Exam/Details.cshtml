@model QuizH.ViewModels.Exam.ExamDetailsViewModel
<div class="row">
    <div class="col-md-9"><h1>@Html.Raw(Model.Title)</h1></div>
</div>
<div class="row">
    <div class="col-md-3"><h3>@Model.Course</h3></div>
</div>

<div class="row">
    <div class="col-md-12"><h2>Instructions</h2></div>
    <div class="col-md-12">@Html.Raw(Model.Instructions)</div>
</div>
<div class="row">
    <h2>Questions</h2>
    <ul>
    @foreach (var question in Model.Questions)
    {
        <li>@Html.Raw(question.Text)</li>
    }
    </ul>
</div>
@using (Html.BeginForm("Download", "Exam", FormMethod.Post))
{
    <input type="hidden" name="ID" value="@Model.Id" />
    <button type="submit" class="btn btn-default">Scarica</button>
}